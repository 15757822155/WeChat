<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1e1ec"
    android:orientation="vertical"
    tools:context="com.hdsh.wechat.avtivity.MessageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back_message"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/communicator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时忆"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/communicator_info"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_communicator_info"
            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="bottom"
            android:background="#f5f5f5"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/voice_communicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/select_voice"/>

            <EditText
                android:visibility="visible"
                android:id="@+id/edittext_communicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"/>

            <Button
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:text="按 住 说 话"
                android:textSize="16sp"
                android:background="@drawable/select_say"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/smilies_communicator"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/select_smilies"/>

            <ImageView
                android:id="@+id/add_list_communicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/select_add_list"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
