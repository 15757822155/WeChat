<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:background="#fff"
              android:orientation="horizontal"
              android:padding="5dp">

    <TextView
        android:id="@+id/message_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/select_message"
        android:gravity="center"
        android:text="微信"
        android:textColor="@drawable/select_color"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/communicator_list_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/select_communicator_list"
        android:gravity="center"
        android:text="通讯录"
        android:textColor="@drawable/select_color"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/find_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/select_find"
        android:gravity="center"
        android:text="发现"
        android:textColor="@drawable/select_color"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/user_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/select_user"
        android:gravity="center"
        android:text="我"
        android:textColor="@drawable/select_color"
        android:textSize="13sp"/>
</LinearLayout>