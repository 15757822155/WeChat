<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:padding="1dp">

    <ImageView
        android:id="@+id/communicator_face"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_face_image"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/communicator_red"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/circle_red"
        />

    <TextView
        android:id="@+id/communicator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/communicator_face"
        android:text="时忆"
        android:textColor="#434343"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/communicator_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/communicator_face"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/communicator_face"
        android:text="时忆：哈哈"
        android:textColor="#9a9a9a"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/communicator_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="3dp"
        android:text="10:43"
        android:textColor="#bbbbbb"
        android:textSize="13sp"/>


</RelativeLayout>